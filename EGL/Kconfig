# Kconfig file for LVGL v8.4

menu "EGL configuration"

    # Define CONFIG_EG_CONF_SKIP so we can use EGL
    # without EG_Config.h file, the EG_IntrnlConfig.h and
    # lv_conf_kconfig.h files are used instead.
    config EG_CONF_SKIP
        bool "Uncheck this to use custom EG_Config.h"
        default y

    config EG_CONF_MINIMAL
        bool "EGL minimal configuration."

    menu "Color settings"
        choice EG_COLOR_DEPTH
            prompt "Color depth."
            default EG_COLOR_DEPTH_16
            help
                Color depth to be used.

            config EG_COLOR_DEPTH_32
                bool "32: ARGB8888"
            config EG_COLOR_DEPTH_16
                bool "16: RGB565"
            config EG_COLOR_DEPTH_8
                bool "8: RGB232"
            config EG_COLOR_DEPTH_1
                bool "1: 1 byte per pixel"
        endchoice

        config EG_COLOR_DEPTH
            int
            default 1 if EG_COLOR_DEPTH_1
            default 8 if EG_COLOR_DEPTH_8
            default 16 if EG_COLOR_DEPTH_16
            default 32 if EG_COLOR_DEPTH_32

        config EG_COLOR_16_SWAP
            bool "Swap the 2 bytes of RGB565 color. Useful if the display has an 8-bit interface (e.g. SPI)."
            depends on EG_COLOR_DEPTH_16

        config EG_COLOR_SCREEN_TRANSP
            bool "Enable more complex drawing routines to manage screens transparency."
            help
                Can be used if the UI is above another layer, e.g. an OSD menu or video player.
                The screen's `bg_opa` should be set to non EG_OPA_COVER value

        config EG_COLOR_MIX_ROUND_OFS
            int "Adjust color mix functions rounding"
            default 128 if !EG_COLOR_DEPTH_32
            default 0 if EG_COLOR_DEPTH_32
            range 0 254
            help
                0: no adjustment, get the integer part of the result (round down)
                64: round up from x.75
                128: round up from half
                192: round up from x.25
                254: round up

        config EG_COLOR_CHROMA_KEY_HEX
            hex "Images pixels with this color will not be drawn (if they are chroma keyed)."
            range 0x000000 0xFFFFFF
            default 0x00FF00
            help
                See misc/EG_Color.h for some color values examples.
    endmenu

    menu "Memory settings"
        config EG_MEM_CUSTOM
            bool "If true use custom malloc/free, otherwise use the built-in `EG_AllocMem()` and `EG_FreeMem()`"

        config EG_MEM_SIZE_KILOBYTES
            int "Size of the memory used by `EG_AllocMem` in kilobytes (>= 2kB)"
            range 2 128
            default 32
            depends on !EG_MEM_CUSTOM

        config EG_MEM_ADDR
            hex "Address for the memory pool instead of allocating it as a normal array"
            default 0x0
            depends on !EG_MEM_CUSTOM

        config EG_MEM_CUSTOM_INCLUDE
            string "Header to include for the custom memory function"
            default "stdlib.h"
            depends on EG_MEM_CUSTOM

        config EG_MEM_BUF_MAX_NUM
            int "Number of the memory buffer"
            default 16
            help
                Number of the intermediate memory buffer used during rendering and other
                internal processing mechanisms.  You will see an error log message if
                there wasn't enough buffers.

        config EG_MEMCPY_MEMSET_STD
            bool "Use the standard memcpy and memset instead of EGL's own functions"
    endmenu

    menu "HAL Settings"
        config EG_DISP_DEF_REFR_PERIOD
            int "Default display refresh period (ms)."
            default 30
            help
                Can be changed in the display driver (`lv_disp_drv_t`).

        config EG_INDEV_DEF_READ_PERIOD
            int "Input device read period [ms]."
            default 30

        config EG_TICK_CUSTOM
            bool "Use a custom tick source"

        config EG_TICK_CUSTOM_INCLUDE
            string "Header for the system time function"
            default "Arduino.h"
            depends on EG_TICK_CUSTOM

        config EG_DPI_DEF
            int "Default Dots Per Inch (in px)."
            default 130
            help
                Used to initialize default sizes such as widgets sized, style paddings.
                (Not so important, you can adjust it to modify default sizes and spaces)
    endmenu

    menu "Feature configuration"

        menu "Drawing"
            config EG_DRAW_COMPLEX
                bool "Enable complex draw engine"
                default y
                help
                    Required to draw shadow, gradient, rounded corners, circles, arc, skew lines,
                    image transformations or any masks.

            config EG_SHADOW_CACHE_SIZE
                int "Allow buffering some shadow calculation"
                depends on EG_DRAW_COMPLEX
                default 0
                help
                    EG_SHADOW_CACHE_SIZE is the max shadow size to buffer, where
                    shadow size is `shadow_width + radius`.
                    Caching has EG_SHADOW_CACHE_SIZE^2 RAM cost.

            config EG_CIRCLE_CACHE_SIZE
                int "Set number of maximally cached circle data"
                depends on EG_DRAW_COMPLEX
                default 4
                help
                    The circumference of 1/4 circle are saved for anti-aliasing
                    radius * 4 bytes are used per circle (the most often used
                    radiuses are saved).
                    Set to 0 to disable caching.

            config EG_LAYER_SIMPLE_BUF_SIZE
                int "Optimal size to buffer the widget with opacity"
                default 24576
                help
                    "Simple layers" are used when a widget has `style_opa < 255`
                    to buffer the widget into a layer and blend it as an image
                    with the given opacity. Note that `bg_opa`, `text_opa` etc
                    don't require buffering into layer.

            config EG_IMG_CACHE_DEF_SIZE
                int "Default image cache size. 0 to disable caching."
                default 0
                help
                    If only the built-in image formats are used there is no real advantage of caching.
                    (I.e. no new image decoder is added).

                    With complex image decoders (e.g. PNG or JPG) caching can
                    save the continuous open/decode of images.
                    However the opened images might consume additional RAM.

            config EG_GRADIENT_MAX_STOPS
                int "Number of stops allowed per gradient."
                default 2
                help
                    Increase this to allow more stops.
                    This adds (sizeof(EG_Color_t) + 1) bytes per additional stop

            config EG_GRAD_CACHE_DEF_SIZE
                int "Default gradient buffer size."
                default 0
                help
                    When EGL calculates the gradient "maps" it can save them into a cache to avoid calculating them again.
                    EG_GRAD_CACHE_DEF_SIZE sets the size of this cache in bytes.
                    If the cache is too small the map will be allocated only while it's required for the drawing.
                    0 mean no caching.

            config EG_DITHER_GRADIENT
                bool "Allow dithering the gradients"
                help
                    Allow dithering the gradients (to achieve visual smooth color gradients on limited color depth display)
                    EG_DITHER_GRADIENT implies allocating one or two more lines of the object's rendering surface
                    The increase in memory consumption is (32 bits * object width) plus 24 bits * object width if using error diffusion

            config EG_DITHER_ERROR_DIFFUSION
                bool "Add support for error diffusion dithering"
                depends on EG_DITHER_GRADIENT
                help
                    Error diffusion dithering gets a much better visual result, but implies more CPU consumption and memory when drawing.
                    The increase in memory consumption is (24 bits * object's width)

            config EG_DISP_ROT_MAX_BUF
                int "Maximum buffer size to allocate for rotation"
                default 10240
                help
                    Only used if software rotation is enabled in the display driver.
        endmenu

        menu "GPU"
            config EG_USE_GPU_ARM2D
                bool "Enable Arm's 2D image processing library (Arm-2D) for all Cortex-M processors."
                default n
                help
                    Must deploy arm-2d library to your project and add include PATH for "arm_2d.h".

            config EG_USE_GPU_STM32_DMA2D
                bool "Enable STM32 DMA2D (aka Chrom Art) GPU."
            config EG_GPU_DMA2D_CMSIS_INCLUDE
                string "include path of CMSIS header of target processor"
                depends on EG_USE_GPU_STM32_DMA2D
                default ""
                help
                    Must be defined to include path of CMSIS header of target processor
                    e.g. "stm32f769xx.h" or "stm32f429xx.h"

            config EG_USE_GPU_RA6M3_G2D
                bool "Enable RA6M3 G2D GPU."
            config EG_GPU_RA6M3_G2D_INCLUDE
                string "include path of target processor"
                depends on EG_USE_GPU_RA6M3_G2D
                default "hal_data.h"
                help
                    Must be defined to include path of target processor
                    e.g. "hal_data.h"

            config EG_USE_GPU_SWM341_DMA2D
                bool "Enable SWM341 DMA2D GPU."
            config EG_GPU_SWM341_DMA2D_INCLUDE
                string "include path of CMSIS header of target processor"
                depends on EG_USE_GPU_SWM341_DMA2D
                default "SWM341.h"
                help
                    Must be defined to include path of CMSIS header of target processor
                    e.g. "SWM341.h"

            config EG_USE_GPU_NXP_PXP
                bool "Use NXP's PXP GPU iMX RTxxx platforms."
            config EG_USE_GPU_NXP_PXP_AUTO_INIT
                bool "Call lv_gpu_nxp_pxp_init() automatically or manually."
                depends on EG_USE_GPU_NXP_PXP
                help
                    1: Add default bare metal and FreeRTOS interrupt handling
                    routines for PXP (lv_gpu_nxp_pxp_osa.c) and call
                    lv_gpu_nxp_pxp_init() automatically during lv_init().
                    Note that symbol SDK_OS_FREE_RTOS has to be defined in order
                    to use FreeRTOS OSA, otherwise bare-metal implementation is
                    selected.
                    0: lv_gpu_nxp_pxp_init() has to be called manually before
                    lv_init().

            config EG_USE_GPU_NXP_VG_LITE
                bool "Use NXP's VG-Lite GPU iMX RTxxx platforms."

            config EG_USE_GPU_SDL
                bool "Use SDL renderer API"
                default n
            config EG_GPU_SDL_INCLUDE_PATH
                string "include path of SDL header"
                depends on EG_USE_GPU_SDL
                default "SDL2/SDL.h"
            config EG_GPU_SDL_LRU_SIZE
                int "Maximum buffer size to allocate for rotation"
                depends on EG_USE_GPU_SDL
                default 8388608
                help
                    Texture cache size, 8MB by default.
        endmenu

        menu "Logging"
            config EG_USE_LOG
                bool "Enable the log module"

            choice
                bool "Default log verbosity" if EG_USE_LOG
                default EG_LOG_LEVEL_WARN
                help
                    Specify how important log should be added.

                config EG_LOG_LEVEL_TRACE
                    bool "A lot of logs to give detailed information"
                config EG_LOG_LEVEL_INFO
                    bool "Log important events"
                config EG_LOG_LEVEL_WARN
                    bool "Log if something unwanted happened but didn't cause a problem"
                config EG_LOG_LEVEL_ERROR
                    bool "Only critical issues, when the system may fail"
                config EG_LOG_LEVEL_USER
                    bool "Only logs added by the user"
                config EG_LOG_LEVEL_NONE
                    bool "Do not log anything"
            endchoice

            config EG_LOG_LEVEL
                int
                default 0 if EG_LOG_LEVEL_TRACE
                default 1 if EG_LOG_LEVEL_INFO
                default 2 if EG_LOG_LEVEL_WARN
                default 3 if EG_LOG_LEVEL_ERROR
                default 4 if EG_LOG_LEVEL_USER
                default 5 if EG_LOG_LEVEL_NONE

            config EG_LOG_PRINTF
                bool "Print the log with 'printf'" if EG_USE_LOG
                help
                    Use printf for log output.
                    If not set the user needs to register a callback with `EG_RegisterLogPrintCB`.

            config EG_LOG_TRACE_MEM
                bool "Enable/Disable EG_LOG_TRACE in mem module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_TIMER
                bool "Enable/Disable EG_LOG_TRACE in timer module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_INDEV
                bool "Enable/Disable EG_LOG_TRACE in indev module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_DISP_REFR
                bool "Enable/Disable EG_LOG_TRACE in disp refr module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_EVENT
                bool "Enable/Disable EG_LOG_TRACE in event module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_OBJ_CREATE
                bool "Enable/Disable EG_LOG_TRACE in obj create module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_LAYOUT
                bool "Enable/Disable EG_LOG_TRACE in layout module"
                default y
                depends on EG_USE_LOG

            config EG_LOG_TRACE_ANIM
                bool "Enable/Disable EG_LOG_TRACE in anim module"
                default y
                depends on EG_USE_LOG
        endmenu

        menu "Asserts"
            config EG_USE_ASSERT_NULL
                bool "Check if the parameter is NULL. (Very fast, recommended)"
                default y if !EG_CONF_MINIMAL

            config EG_USE_ASSERT_MALLOC
                bool "Checks if the memory is successfully allocated or no. (Very fast, recommended)"
                default y if !EG_CONF_MINIMAL

            config EG_USE_ASSERT_STYLE
                bool "Check if the styles are properly initialized. (Very fast, recommended)"

            config EG_USE_ASSERT_MEM_INTEGRITY
                bool "Check the integrity of `lv_mem` after critical operations. (Slow)"

            config EG_USE_ASSERT_OBJ
                bool "Check NULL, the object's type and existence (e.g. not deleted). (Slow)."

            config EG_ASSERT_HANDLER_INCLUDE
                string "Header to include for the custom assert function"
                default "assert.h"
        endmenu

